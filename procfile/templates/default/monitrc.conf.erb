<% (@process_count || 1).times do |num| %>
check process <%= @process_type %>_<%= @app_name %>_<%= num %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/<%= @process_type %>_<%= num %>.pid
  start program = "/usr/bin/sudo su - deploy -c 'cd <%= @deploy[:deploy_to] %>/current; RAILS_ENV=production <%= @command %> & echo $! > <%= @deploy[:deploy_to] %>/shared/pids/<%= @process_type %>_<%= num %>.pid; fg'" with timeout 90 seconds
  stop program = "/bin/bash -c '/bin/kill -TERM `cat <%= @deploy[:deploy_to] %>/shared/pids/<%= @process_type %>_<%= num %>.pid`'" with timeout 180 seconds
  group <%= @process_type %>_<%= @app_name %>
<% end %>
